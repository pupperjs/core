{
    "compilerOptions": {
        "target": "esnext",
        "allowJs": true,
        "esModuleInterop": true,
        "outDir": "out",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "types",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "skipLibCheck": true,
        "typeRoots": ["./packages/common/types"]
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules"],
}