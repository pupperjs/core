{
    "compilerOptions": {
        "target": "es2015",
        "allowJs": true,
        "esModuleInterop": true,
        "outDir": "out",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "types",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
}